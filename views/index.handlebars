<header class="jumbotron text-center">
    <h1>EAT-DA-BURGER</h1>
</header>

<div class="container">
    <div class="row">

        <div class="col-6">
            <h2>Burgers NOT Devoured</h2>
            <hr>
            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burgers-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-6">
            <h2>Burgers Devoured</h2>
            <hr>
            <ol>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/devoured-burgers-block devoured=true}}
                {{/if}}
                {{/each}}
            </ol>
        </div>

    </div>
</div>

<div class="container form-container">
    <h2>Add A Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burger-name">Burger Name:</label>
            <input type="text" id="burger-name" class="form-control" name="name">
        </div>
        <button type="submit" id="submitBtn" class="btn btn-danger">Add Burger</button>

    </form>
</div>